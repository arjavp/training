<!-- Include header -->

<%- include('include/_header.ejs') %>

<!-- /Include header -->



 <!-- Main site -->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
           <div class="filter">
               <a href="#"> All Course </a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"> Update Course</h2>
            <span class="text-light"> Use below form to update course </span>
        </div>
         
        <form method="POST" id="update_user" action = '/update-course' >
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light" >Name</label>
                    <input type="hidden" name="id" value="<%= id %>"/>
                    <input type="text" name="name" placeholder="Name of the Course" value="<%= data.course_name %>">
                </div>
                <div class="form-group">
                    <label for="Duration" class="text-light">Duration</label>
                    <input type="text" name="duration" placeholder="Duration of Course" value="<%= data.dataValues.duration %>">
                </div>
            
            
                <div class="form-group">
                    <label for="Fees" class="text-light">Fees</label>
                    <input type="text" name="fees" placeholder="Fees for the Course" value="<%= data.fees %>">
                </div>
            

            
                <div class="form-group">
                    
                    <button type="submit" class="btn text-dark update">Update</button>
                </div>
            
            </div>
            </form>
            

        


    </div>
</main>
<!-- /Main site -->


<!-- Include footer -->

<%- include('include/_footer.ejs') %>

<!-- /Include footer -->
